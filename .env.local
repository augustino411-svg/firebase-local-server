NEXT_PUBLIC_API_BASE=https://firebase-local-server.onrender.com
const API_BASE = process.env.NEXT_PUBLIC_API_BASE;

try {
  const res = await fetch(`${API_BASE}/api/announcements`, {
    method: 'GET',
    credentials: 'include',
  });

  if (!res.ok) {
    throw new Error(`取得公告失敗：${res.status}`);
  }

  const data = await res.json();
  console.log('公告資料:', data);
  // 你可以在這裡 setState 或 return data
} catch (error) {
  console.error('公告 API 錯誤:', error);
}
